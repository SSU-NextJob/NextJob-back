<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nextjob.back.board.service.BoardMapper">
    <insert id="insertPost" parameterType="com.nextjob.back.board.domain.Post">
        INSERT INTO posts (
            user_id,
            user_name,
            project_id,
            title,
            content,
            role_type
        ) VALUES (
             #{userId},
             #{userName},
             #{projectId},
             #{title},
             #{content},
             #{roleType}
         )
    </insert>
</mapper>